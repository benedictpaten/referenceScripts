<cactusWorkflowConfig>
  <constants defaultMemory="mediumMemory" defaultOverlargeMemory="mediumMemory" defaultCpu="1" defaultOverlargeCpu="1">
		<!-- These constants are used to control the amount of memory and cpu the different jobs in a batch are using. -->
  		<defines littleMemory="2147483648" mediumMemory="8589934592" bigMemory="207374182400"/>
  </constants>
  <preprocessor check="1" memory="2147483648" preprocessorString="cactus_checkUniqueHeaders.py IN_FILE" scope="leaves" />
  <preprocessor chunkSize="100000000" memory="littleMemory" preprocessorString="cactus_lastzRepeatMask.py --minPeriod=10 --lastzOpts='--step=20 --notransition --ambiguous=iupac --nogapped' GENOME_FILE IN_FILE OUT_FILE" scope="leaves" />
  	<setup makeEventHeadersAlphaNumeric="0">
	</setup>
	<caf 
		chunkSize="25000000" 
		lastzArguments="--step=5 --ambiguous=iupac"
		compressFiles="1" 
		overlapSize="10000" 
		filterByIdentity="0" 
		identityRatio="6" 
		minimumDistance="0.01" 
		minimumSequenceLengthForBlast="30"
		annealingRounds="64" 
		deannealingRounds="2 8" 
		blockTrim="5" 
		minimumTreeCoverage="0.0" 
		trim="0 0" 
		minimumBlockDegree="2"
		requiredIngroupFraction="0.0"
		requiredOutgroupFraction="0.0"
		requiredAllFraction="0.0"
		singleCopyIngroup="0"
		singleCopyOutgroup="1"
		maxAdjacencyComponentSizeRatio="1000"
		minLengthForChromosome="1000000"
		proportionOfUnalignedBasesForNewChromosome="0.8"
		lastzMemory="littleMemory"
	>
		<!-- Change the chunk size to alter the number of blast jobs approximately quadratically -->
		<CactusCafRecursion maxFlowerGroupSize="100000000"/>
		<CactusCafWrapper minFlowerSize="5000" maxFlowerGroupSize="25000000"/>
		<CactusCafWrapperLarge2 overlargeMemory="bigMemory"/>
	</caf>
	<bar
		runBar="1"
		spanningTrees="3" 
		gapGamma="0.0" 
		useBanding="1" 
		bandingLimit="100000" 
		splitMatrixBiggerThanThis="3000" 
        anchorMatrixBiggerThanThis="500"
        repeatMaskMatrixBiggerThanThis="500"
		diagonalExpansion="20"
		constraintDiagonalTrim="14" 
		minimumBlockDegree="2" 
		alignAmbiguityCharacters="1"
		requiredIngroupFraction="0.0"
		requiredOutgroupFraction="0.0"
		requiredAllFraction="0.0"
		largeEndSize="10000"
		veryLargeEndSize="100000"
		maximumNumberOfSequencesBeforeSwitchingToFast="100"
		pruneOutStubAlignments="1"
	>
		<CactusBarRecursion maxFlowerGroupSize="100000000"/>
		<CactusBarWrapper maxFlowerGroupSize="10000" memory="littleMemory"/>
		<CactusBarEndAlignerWrapper memory="littleMemory"/>
	</bar>
	<normal 
		iterations="0"
	>
		<CactusNormalRecursion maxFlowerGroupSize="500000000" maxFlowerWrapperGroupSize="50000000"/>
		<CactusNormalWrapper/>
	</normal>
	<avg
		buildAvgs="0"
	>
		<CactusAVGRecursion maxFlowerGroupSize="500000000" maxFlowerWrapperGroupSize="50000000"/>
		<CactusAVGWrapper/>
	</avg>
	<reference 
		buildReference="1"
		matchingAlgorithm="blossom5" 
		reference="reference" 
		useSimulatedAnnealing="1" 
		theta="0.0001" 
		maxWalkForCalculatingZ="100000" 
		permutations="20"
		ignoreUnalignedGaps="1"
		wiggle="0.9999"
	>
		<CactusReferenceRecursion maxFlowerGroupSize="500000000" maxFlowerWrapperGroupSize="50000000"/>
	 	<CactusReferenceWrapper/>
	 	<CactusSetReferenceCoordinatesUpWrapper/>
	 	<CactusSetReferenceCoordinatesDownRecursion maxFlowerGroupSize="500000000" maxFlowerWrapperGroupSize="50000000"/>
	 	<CactusSetReferenceCoordinatesDownWrapper/>
	</reference>
	<check 
		runCheck="0"
	>
		<CactusCheckRecursion maxFlowerGroupSize="500000000" maxFlowerWrapperGroupSize="50000000"/>
		<CactusCheckWrapper/>
	</check>
	<hal
		buildHal="1"
		buildMaf="0"
		buildFasta="1"
		showOnlySubstitutionsWithRespectToReference="0"
		joinMaf="0"
	>
		<CactusHalGeneratorRecursion maxFlowerGroupSize="50000000"/>
		<CactusHalGeneratorUpWrapper/>
	</hal>
  	<multi_cactus>
		<outgroup 
			strategy="greedyLeaves" 
			threshold="0"
			ancestor_quality_fraction="0.75"
		/>
	 	<decomposition 
	 		subtree_size="2" 
	 		self_alignment="false" 
	 		default_internal_node_prefix="Anc"
			max_parallel_subtrees="5"
	 	/>
  	</multi_cactus>
</cactusWorkflowConfig>
